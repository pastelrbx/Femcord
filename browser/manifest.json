{
    "manifest_version": 3,
    "minimum_chrome_version": "111",
    "name": "Femcord Web",
    "description": "The other cutest Discord mod now in your browser",
    "author": "Divulgate",
    "homepage_url": "https://github.com/Divulgate/Femcord",
    "icons": {
        "128": "icon.png"
    },
    "host_permissions": [
        "*://*.discord.com/*",
        "https://raw.githubusercontent.com/*",
        "https://cdn.discordapp.com/*",
        "https://media.discordapp.net/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "permissions": [
        "declarativeNetRequest"
    ],
    "content_scripts": [
        {
            "run_at": "document_start",
            "matches": [
                "*://*.discord.com/*"
            ],
            "js": [
                "content.js"
            ],
            "all_frames": true,
            "world": "ISOLATED"
        },
        {
            "run_at": "document_start",
            "matches": [
                "*://*.discord.com/*"
            ],
            "js": [
                "dist/Femcord.js"
            ],
            "all_frames": true,
            "world": "MAIN"
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "dist/*",
                "vendor/*"
            ],
            "matches": [
                "*://*.discord.com/*"
            ]
        }
    ],
    "declarative_net_request": {
        "rule_resources": [
            {
                "id": "modifyResponseHeaders",
                "enabled": true,
                "path": "modifyResponseHeaders.json"
            }
        ]
    }
}